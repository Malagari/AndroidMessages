{
    "manifest_version": 2,
    "name": "Android Messages",
    "description": "A Chrome application that allows you to use Android Messages web interface as a separate desktop application.",
    "version": "1.0",
    "icons": {
        "128": "img/icon.png"
    },
    "app": {
        "background": {
            "scripts": [
                "js/background.js"
            ],
            "pages": [
                "html/embed.html"
            ]
        }
    },
    "permissions": [
        "webview",
        "fullscreen",
        "notifications"
    ]
}